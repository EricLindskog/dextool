{
    "name": "fun_with_clang",
    "description": "Fun with LLVM/Clang",
    "copyright": "Copyright © 2014, Joakim Brännström",
    "authors": ["Joakim Brännström"],
    "license": "BSL-1.0",
    "dependencies": {
        "tested": {"version": ">=0.9.4"},
        "docopt": {"version": ">=0.6.1-b.1"},
        "logger": {"version": ">=0.3.3"}
    },

    "targetPath": "build",
    "mainSourceFile": "source/app.d",
	"sourcePaths": ["source", "clang", "dsrcgen"],
	"importPaths": ["source", "clang", "dsrcgen"],

	"lflags-posix": ["-lclang", "-rpath", ".", "-L."],
    "targetType": "executable",
    "buildRequirements": ["requireBoundsCheck", "requireContracts"],

    "configurations": [
        {"name": "release",
            "targetName": "fun_with_clang",
        },
        {"name": "unittest",
            "targetName": "unittest",
            "buildType": "debugInfo"
        }
    ]
}
